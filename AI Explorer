  <script>
    const studiedElements = new Set();

    document.addEventListener('DOMContentLoaded', () => {
      document.querySelectorAll('td[data-element]').forEach(td => {
        td.addEventListener('click', () => {
          const n = parseInt(td.dataset.element,10);
          toggleStudied(n, td);
        });
      });
    });

    function toggleStudied(n, cell){
      if (studiedElements.has(n)){
        studiedElements.delete(n);
        cell.classList.remove('studied');
      }else{
        studiedElements.add(n);
        cell.classList.add('studied');
      }
    }

    function clearAll(){
      studiedElements.clear();
      document.querySelectorAll('.studied').forEach(td => td.classList.remove('studied'));
    }

    function copyPrompt(n, btnEl){
      const text = document.getElementById(`prompt${n}`).textContent.trim();
      const onDone = () => {
        const original = btnEl.textContent;
        btnEl.textContent = 'Copied!';
        btnEl.style.background = 'var(--brand)';
        setTimeout(() => {
          btnEl.textContent = original;
          btnEl.style.background = '#2196f3';
        }, 1200);
      };

      if (navigator.clipboard) {
        navigator.clipboard.writeText(text).then(onDone);
      } else {
        const ta = document.createElement('textarea');
        ta.value = text;
        document.body.appendChild(ta);
        ta.select(); document.execCommand('copy');
        document.body.removeChild(ta);
        onDone();
      }
    }
  </script>
</body>
</html>
